# Base make.conf for msucharski-gentoo-overlay.
# Default USE flags are defined in globals directory to correctly handle overriding.

FEATURES="${FEATURES} split-elog"
PORTAGE_GPG_DIR="/var/lib/gentoo/gkeys/keyrings/gentoo/release"
EMERGE_DEFAULT_OPTS="${EMERGE_DEFAULT_OPTS} --with-bdeps=y --autounmask=n"
PORTAGE_NICENESS="17"

PORTDIR="/var/db/repos/gentoo"
DISTDIR="/var/cache/distfiles"
PKGDIR="/var/cache/packages"

ABI_X86="64"

LC_MESSAGES=C

SANE_BACKENDS=""
GRUB_PLATFORMS="efi-64"
